<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    tools:context="darkrai.lysis.corp.aidbot.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/speech"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@drawable/download"
        android:gravity="center"
        android:layout_marginLeft="145dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/burns"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="BURNS"
            android:background="@drawable/burns"/>

        <Button
            android:id="@+id/accidents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/accident"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <Button
               android:id="@+id/suffocation"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:background="@drawable/suffocation"
               android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/frost"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/frost"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/faint"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/faint"
                android:layout_marginTop="10dp" />
             <Button
                 android:id="@+id/shock"
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:background="@drawable/shock"
                 android:layout_marginLeft="90dp"
                 android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
   <!-- <include layout="@layout/activity_burns"/>-->
</ScrollView>
